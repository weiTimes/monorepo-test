{
  "lerna": "4.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent",
  "changelogPreset": "angular",
  "command": {
    "version": {
      "allowBranch": ["master", "main", "feature/*"],
      "message": "chore(release): publish %s"
    },
    "publish": {
      "allowBranch": ["master"],
      "message": "chore(release): publish %s"
    }
  }
}
